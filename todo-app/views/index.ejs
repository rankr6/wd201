<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
        function updateTodo (id,completed) {
            fetch(`/todos/${id}`,
            {
            method: "put",
            headers:{ "Content-Type" : "application/json" },
            body: JSON.stringify({
                "_csrf": token,
                completed: completed,
            })
            })
            .then((res) => {
                if(res.ok){
                    window.location.reload();
                }
            })
            .catch((err) => console.error(err));
        }
        function deleteTodo (id) {
            fetch(`/todos/${id}`,
            {
            method: "delete",
            headers:{ "Content-Type" : "application/json" },
            body: JSON.stringify({
                "_csrf": token
            })
            })
            .then((res) => {
                if(res.ok){
                    window.location.reload();
                }
            })
            .catch((err) => console.error(err));
        }
        </script>
    <title>To-do manager</title>
</head>
<body>
    <div>
        <div class="grid grid-cols-6">
            <div class="col-start-3 col-span-2">
                <%- include('header.ejs') %>
            </div>
            <div class="col-start-3 col-span-2">
                <form action="/todos" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="flex gap-2 py-4">
                        <div class="flex-auto">
                            <input type="text" name="title" placeholder="What's next?" class="border border-gray-300 leading-4 rounded text-gray-900 w-full text-sm p-2" required >
                        </div>
                        <div class="flex-auto">
                            <input type="date" name="dueDate" class="border border-gray-300 rounded leading-4 text-gray-900 w-full text-sm p-2" required>
                        </div>
                        <div>
                            <button type="submit" class="bg-green-600 px-5 py-1.5 mr-2 font-medium text-white rounded">Add</button>
                        </div>
                    </div>
                </form>
                <div>
                    <%- include('todos.ejs',{title:"Overdue",data:odue}) %>
                    <%- include('todos.ejs',{title:"Due Today",data:tdue}) %>
                    <%- include('todos.ejs',{title:"Due Later",data:ldue}) %>
                    <%- include('todos.ejs',{title:"Completed Items",data:completedItems}) %>
            </div>
            <div class="col-start-3 col-span-2">
                <%- include('footer.ejs') %>
            </div>
        </div>
    </div>
    
    
    

</body>
</html>